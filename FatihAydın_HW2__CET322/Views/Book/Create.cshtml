@model FatihAydın_HW2__CET322.Models.Book
<h1>Create New Book</h1>
<form asp-controller="Book" asp-action="Create" method="post">
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                <input type="text" id="title" name="title">
            </dd>
        </dl>
    </div>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                <input type="text" id="description" name="description">
            </dd>
        </dl>
    </div>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd class="col-sm-10">
                <input type="text" id="Author" name="Author">
            </dd>
        </dl>
    </div>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PublishDate)
            </dt>
            <dd class="col-sm-10">
                <input type="date" id="PublishDate" name="PublishDate">
            </dd>
        </dl>
    </div>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PageSize)
            </dt>
            <dd class="col-sm-10">
                <input type="number" id="PageSize" name="PageSize">
            </dd>
        </dl>
    </div>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                <input type="number" id="Price" name="Price">
            </dd>
        </dl>
    </div>
    <button type="submit" onclick="return confirm('Eklemek istediğine emin misin?')">Ekle</button>
</form>
